<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <farayan.commons.UI.CommonTextInputLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <farayan.commons.components.NumberEntry
            android:id="@+id/DisplayableNumberEntry"
            app:decimalPrecision="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layoutDirection="ltr"
            android:textDirection="ltr" />
    </farayan.commons.UI.CommonTextInputLayout>

    <farayan.commons.UI.RialCoefficientBox
        android:id="@+id/CoefficientBox"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content" />
</LinearLayout>
